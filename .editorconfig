# editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[app/*]
end_of_line = lf
insert_final_newline = true

[resources/assets/*.{js, scss}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[resources/views/*.blade.php]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
